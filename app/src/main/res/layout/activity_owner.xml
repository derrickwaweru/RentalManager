<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derrick.rentalmanager.ui.OwnerActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rela1"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/ownerReportsImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/newspaper" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ownerReportsImageView"
            android:layout_marginLeft="30dp"
            android:text="Reports"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ownerTenantsImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/ownerReportsImageView"
            android:layout_marginLeft="50dp"
            android:src="@drawable/family"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenants"
            android:layout_below="@+id/ownerTenantsImageView"
            android:layout_marginLeft="240dp"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela1"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/ownerPropertyImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/properties" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ownerPropertyImageView"
            android:layout_marginLeft="30dp"
            android:text="Properties"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ownerPaymentsImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/ownerPropertyImageView"
            android:layout_marginLeft="50dp"
            android:src="@drawable/expenses" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_below="@+id/ownerPaymentsImageView"
            android:text="Payments"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
