<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derrick.rentalmanager.ui.ManagerActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstRelative"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/chatImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/chat"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:layout_below="@+id/chatImageView"
            android:layout_marginLeft="40dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/managerTenants"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/family"
            android:layout_toRightOf="@+id/chatImageView"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenants"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/managerTenants"
            android:layout_marginLeft="220dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstRelative"
        android:layout_marginTop="40dp"
        android:id="@+id/secondRelative">

        <ImageView
            android:id="@+id/workersImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/workers"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workers"
            android:layout_below="@+id/workersImageView"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/managerReportsImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/newspaper"
            android:layout_toRightOf="@id/workersImageView"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/managerReportsImageView"
            android:layout_marginLeft="218dp"
            android:text="Reports"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondRelative"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/managerOwnersImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/owner"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/managerOwnersImageView"
            android:layout_marginLeft="20dp"
            android:text="Owners"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/managerExpensesImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/managerOwnersImageView"
            android:layout_marginLeft="100dp"
            android:src="@drawable/expenses" />

        <TextView
            android:id="@+id/expensesImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/managerExpensesImageView"
            android:layout_marginLeft="215dp"
            android:text="Expenses"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
