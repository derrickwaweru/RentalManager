<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derrick.rentalmanager.saving.AddOwnerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative1"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Add Owner"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="160dp">

        <ImageView
            android:id="@+id/ownerDetailImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/owner" />

        <EditText
            android:id="@+id/ownerFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/ownerDetailImageView"
            android:hint="First Name" />

        <EditText
            android:id="@+id/ownerLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/ownerDetailImageView"
            android:layout_below="@+id/ownerFirstNameEditText"
            android:hint="Last Name"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/ownerEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="5dp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/ownerPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ownerEmailEditText"
            android:layout_marginTop="20dp"
            android:hint="Phone"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayou3"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="20dp">

        <info.hoang8f.widget.FButton
            android:id="@+id/addOwnerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Owner"
            app:buttonColor="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            app:cornerRadius="4dp"/>

    </RelativeLayout>
</RelativeLayout>
